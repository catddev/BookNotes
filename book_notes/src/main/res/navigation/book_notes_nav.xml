<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_notes_nav"
    app:startDestination="@id/booksFragment">

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.epamupskills.book_notes.presentation.books.BooksFragment"
        android:label="BooksFragment"
        tools:layout="@layout/fragment_books">
        <action
            android:id="@+id/action_booksFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            app:popUpTo="@id/booksFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.epamupskills.book_notes.presentation.notes.NoteFragment"
        android:label="NoteFragment"
        tools:layout="@layout/fragment_note" />
</navigation>